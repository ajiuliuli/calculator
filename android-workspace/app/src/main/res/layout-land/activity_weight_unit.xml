<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/input_num"
                    android:layout_width="560dp"
                    android:layout_height="45dp"
                    android:inputType="none"
                    android:gravity="center|right"
                    android:background="#f0f0f0"
                    android:hint="转换输入"
                    android:maxLines="1"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/input_unit"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:inputType="none"
                    android:hint="单位"
                    android:gravity="center|right"
                    android:background="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/output_num"
                    android:layout_width="560dp"
                    android:layout_height="45dp"
                    android:inputType="none"
                    android:gravity="center|right"
                    android:background="#f0f0f0"
                    android:hint="转换结果"
                    android:maxLines="1"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/output_unit"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:inputType="none"
                    android:hint="单位"
                    android:gravity="center|right"
                    android:background="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gram"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="克"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_jin"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="斤"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_kilogram"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="千克"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tonne"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="公吨"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_ounce"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="盎司"
                    android:textSize="20sp"
                    android:textAllCaps="false"/>


                <Button
                    android:id="@+id/btn_pound"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="磅"
                    android:textSize="20sp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_5"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_6"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="6"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_7"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="7"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_8"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="8"
                            android:textSize="20sp"/>

                        <Button
                            android:id="@+id/btn_9"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="9"
                            android:textSize="20sp"/>

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@android:color/holo_orange_light"
                            android:text="C"
                            android:textSize="20sp"/>

                        <Button
                            android:id="@+id/btn_del"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="DEL"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="1">
                        <Button
                            android:id="@+id/btn_0"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"/>

                        <Button
                            android:id="@+id/btn_1"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="1"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_2"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="2"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_3"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="3"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/btn_4"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="4"
                            android:textSize="20sp"/>


                        <Button
                            android:id="@+id/btn_point"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="18.10"
                            android:text="."
                            android:textSize="20sp"/>


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_swap"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/holo_orange_light"
                    android:text="转\n\n换"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
