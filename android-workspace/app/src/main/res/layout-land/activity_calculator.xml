<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/input"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:inputType="none"
            android:gravity="center|right"
            android:background="#f0f0f0"
            android:hint="运算过程输入框"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/output"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:inputType="none"
            android:gravity="center|right"
            android:background="#f0f0f0"
            android:hint="运算结果输出框"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="C"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_del"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="DEL"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="/"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_multply"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="*"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_sin"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:text="SIN"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_cos"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="COS"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_leftBracket"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="("
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_rightBracket"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text=")"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tan"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:text="TAN"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_sqrt"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="y√X"
                android:textSize="20sp"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/btn_square"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="x²"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_cube"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="x³"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_bin"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:text="BIN"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_oct"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="OCT"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btn_hex"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="HEX"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/power"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="^"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="6"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="7"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="8"
                        android:textSize="20sp"/>

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="9"
                        android:textSize="20sp"/>

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="+"
                        android:textSize="20sp"/>

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="-"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"/>

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="1"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="2"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="3"
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="4"
                        android:textSize="20sp"/>


                    <Button
                        android:id="@+id/btn_point"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="18.10"
                        android:text="."
                        android:textSize="20sp"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="@android:color/holo_orange_light"
                android:text="="
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>